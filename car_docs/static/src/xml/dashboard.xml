        <style>
            .main-section {
            display: flex;
            justify-content: space-between;
            overflow-y: auto;
            max-height: 100vh;
            padding: 120px;
            }
            .section {
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 20px;
            overflow-y: auto;
            width: 30%;
            background-color: #f9f9f9;
            }
            .section:hover {
            transform: translateY(-10px);
            overflow-y: auto;
            transition: transform 0.3s, box-shadow 0.3s;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

            .background-section-header {
            background-color: #ffffff;
            position: -webkit-sticky; /* For Safari */
            position: sticky;
            top: 0;
            z-index: 1;
            }

            .background-section-header .section-header {
            background-color: rgba(113, 99, 158, 0.86);
            text-align: center;
            padding: 10px;
            border-radius: 8px 8px 8px 8px;
            }

            .section-header h3 {
            color: #ffffff;
            }
            .section-content {
            margin-top: 15px;
            overflow-y: auto;
            }

            .section-content a {

            }

            .section-content a:hover {
            background-color: #ccc;
            }

            .float-right {
            float: right;
            }
            p {
            margin: 10px 0;
            font-weight: bold;
            }
        </style>
